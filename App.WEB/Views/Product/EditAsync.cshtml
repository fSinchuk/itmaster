@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@using App.WEB.ViewModels
@model ProductDTO
@{
    ViewData["Title"] = "EditAsync";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit @Model.Name</h2>
<h3 class="text-success"> @TempData["message"] </h3>
<h3 class="text-danger"> @TempData["error"] </h3>
<div class="row">
    <div class="col-md-4 col-12">
        <form asp-controller="Product" method="post" asp-action="Edit">
            @Html.HiddenFor(model => model.Id)
            <p>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Product name" />
                <span class="text-warning" asp-validation-for="Name"></span>
            </p>
            <p>
                <label asp-for="CategoryId"></label>
                <select  class="form-control" asp-for="CategoryId" asp-items='new SelectList(Model.Categories,"Id","Name")'></select>
            </p>

            <p>
                <label asp-for="IsActive"></label>
                <input asp-for="IsActive" class="form-control" type="checkbox"  data-toggle="toggle" />
                <span class="text-warning" asp-validation-for="IsActive"></span>
            </p>
            <p>
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="Product price" />
                <span class="text-warning" asp-validation-for="Price"></span>
            </p>
            <p>
                <a class="btn btn-default" href="/Product">Back to list</a>    <button class="btn btn-success">Update</button>
            </p>
        </form>
    </div>
</div>